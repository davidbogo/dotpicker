<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/bowlby_one"
            android:text="BrainBust"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bowlby_one"
            android:text="Score"
            android:textColor="@color/black"
            android:textSize="11dp"/>

        <TextView
            android:id="@+id/brain_bust_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/bowlby_one"
            android:textColor="@color/black"
            android:textSize="11dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bowlby_one"
            android:text="Correct Answers"
            android:textColor="@color/black"
            android:textSize="11dp"/>

        <TextView
            android:id="@+id/brain_bust_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/bowlby_one"
            android:textColor="@color/black"
            android:textSize="11dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bowlby_one"
            android:text="Best Streak"
            android:textColor="@color/black"
            android:textSize="11dp"/>

        <TextView
            android:id="@+id/brain_bust_streak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/bowlby_one"
            android:textColor="@color/black"
            android:textSize="11dp"/>

        <Button
            android:id="@+id/brain_bust_end_btn_next"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black"
            android:text="next"
            android:textSize="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"/>


    </LinearLayout>
</androidx.wear.widget.BoxInsetLayout>